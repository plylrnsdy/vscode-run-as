{
    "name": "run-as",
    "displayName": "Run as ...",
    "description": "Right click a file to run as the parameter of command in terminal.",
    "publisher": "plylrnsdy",
    "version": "1.8.21",
    "engines": {
        "vscode": "^1.17.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "execute",
        "run",
        "click"
    ],
    "icon": "images/icon.png",
    "main": "out/src/extension.js",
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "publish": "npm run compile && vsce publish"
    },
    "dependencies": {
        "micromatch": "^3.1.10"
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/micromatch": "^3.1.0",
        "@types/mocha": "^2.2.48",
        "@types/node": "^7.10.2",
        "chai": "^4.2.0",
        "mocha": "^5.2.0",
        "typescript": "^2.9.2",
        "vscode": "^1.1.22"
    },
    "license": "MIT",
    "homepage": "https://github.com/plylrnsdy/vscode-run-as#README.md",
    "bugs": {
        "url": "https://github.com/plylrnsdy/vscode-run-as/issues",
        "email": "plylrnsdy@163.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/plylrnsdy/vscode-run-as.git"
    },
    "activationEvents": [
        "onCommand:extension.runAs"
    ],
    "contributes": {
        "commands": [{
            "title": "%command.runAs.title%",
            "command": "extension.runAs",
            "category": "RunAs"
        }],
        "menus": {
            "explorer/context": [{
                "command": "extension.runAs",
                "group": "navigation@44"
            }]
        },
        "configuration": {
            "type": "object",
            "title": "Run As ...",
            "properties": {
                "RunAs.changeCwd": {
                    "type": "object",
                    "description": "%RunAs.changeCwd.description%",
                    "default": {
                        "name": "Change Current Working Directory",
                        "command": {
                            "win32": "cd -d ${cwd}",
                            "linux": "cd ${cwd}",
                            "darwin": "cd ${cwd}"
                        }
                    }
                },
                "RunAs.runInNewTerminalWindows": {
                    "type": "object",
                    "description": "%RunAs.runInNewTerminalWindows.description%",
                    "default": {
                        "enable": false,
                        "name": "New Terminal Window",
                        "command": {
                            "win32": "Start-Process cmd -ArgumentList '/c ${command}'",
                            "linux": "gnome-terminal -x bash -c '${command}'"
                        }
                    }
                },
                "RunAs.globsMapToCommand": {
                    "type": "array",
                    "markdownDescription": "%RunAs.globsMapToCommand.description%",
                    "default": [{
                        "globs": "*.*",
                        "mode": "silent",
                        "command": {
                            "win32": "start ${rPath}",
                            "linux": "gnome-open ${rPath}",
                            "darwin": "open ${rPath}"
                        },
                        "exceptions": [{
                            "globs": "*.@(bat|cmd|exe)",
                            "command": ".\\${rPath}",
                            "exceptions": [{
                                "globs": "*.watcher.@(bat|cmd)",
                                "command": "@block .\\${rPath}"
                            }, {
                                "globs": "\\[server\\]*.@(bat|cmd)",
                                "command": "@out .\\${rPath}"
                            }]
                        }, {
                            "globs": "*.js",
                            "command": "node ${rPath}",
                            "exceptions": [{
                                "globs": "*.spec.js",
                                "command": "mocha ${rPath}"
                            }]
                        }, {
                            "globs": "**/@(src|test)/**/*.ts",
                            "command": "node ${`out/${dir}/${sFile}.js`}",
                            "exceptions": [{
                                "globs": "*.spec.ts",
                                "command": "mocha ${`out/${dir}/${sFile}.js`}"
                            }]
                        }, {
                            "globs": "*.py",
                            "command": "python ${rPath}"
                        }]
                    }]
                }
            }
        }
    }
}
